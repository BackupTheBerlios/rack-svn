xeno_dir = @XENO_USER_PREFIX@
xeno_lib_dir = @XENO_LIBRARIES@

bindir = $(prefix)/bin/tims
etcdir = $(prefix)/etc

etc_HEADERS = \
	tims_rtnet_example.conf

bin_PROGRAMS = \
	tims_client \
	tims_router_tcp

CFLAGS = \
	-I$(top_srcdir) \
	-I$(xeno_dir)/include

### tims_client ########################################

tims_client_SOURCES = \
	tims_client.c

tims_client_LDADD = \
	-lpthread

### tims_router_tcp ####################################

tims_router_tcp_SOURCES = \
	tims_router_tcp.c

tims_router_tcp_LDADD = \
	-lpthread

EXTRA_DIST = \
	tims_router.h
