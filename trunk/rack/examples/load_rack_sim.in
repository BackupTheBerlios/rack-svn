prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR=@bindir@
LIBDIR=@libdir@
PKGLIBDIR=@libdir@/rack
PKGDATADIR=@datadir@/rack

CURR_PATH=`pwd`


# in case Xenomai was built modularised

modprobe xeno_rtdm 2> /dev/null
modprobe xeno_native 2> /dev/null


# TiMS communication services

cd $BINDIR

./tims_client &
./tims_router_tcp &

insmod $PKGLIBDIR/tims.ko


# RACK real-time applications

export LD_LIBRARY_PATH=$LIBDIR:$LD_LIBRARY_PATH

./ChassisSim \
    --instance 0 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

./OdometryChassis \
    --instance 0 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 &

./Scan2DSim \
    --instance 0 \
    --odometryInst 0 \
    --maxRange=10000 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 \
    --mapFile $PKGDATADIR/rack_example.dxf &

./Position \
    --instance 0 \
    --cmdTaskPrio 20 \
    --dataTaskPrio 19 &

./PilotJoystick \
    --instance 0 \
    --scan2dInst=0 \
    --maxSpeed=1000 \
    --mode=1 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

./PilotWallFollowing \
    --instance 1 \
    --scan2dInst=0 \
    --maxSpeed=1000 \
    --cmdTaskPrio 30 \
    --dataTaskPrio 29 &

cd $CURR_PATH

sleep 3
echo -n "Press ENTER to terminate"
read DUMMY

killall PilotWallFollowing PilotJoystick Scan2DSim Position OdometryChassis ChassisSim tims_client tims_router_tcp
sleep 3
rmmod tims
